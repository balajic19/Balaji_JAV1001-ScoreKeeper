<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true"
    android:background="#ffff00">

<!--    Start of the Code-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--Creating Text Cricket-->
        <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="8sp"
            android:text="CRICKET"
            android:textColor="@color/teal_200"
            android:textSize="69sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

<!--        Creating score text-->
        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="8sp"
            android:text="score"
            android:textColor="@color/teal_200"
            android:textSize="29sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameName" />

<!--        Creating a vertical linear layout to insert
            1. teams
            2. Switch
            3. Scores
            4. Run buttons-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/teamIDScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoreText"
            app:layout_constraintVertical_bias="0.496">

<!--            Creating a horizontal linear layout for 2 teams-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/teamID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scoreText">

<!--                Creating team A-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/teamA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEAM A"
                        android:textColor="@color/teal_200"
                        android:textSize="30sp"
                        android:layout_marginStart="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

<!--                Creating team B-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/teamB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEAM B"
                        android:textColor="@color/teal_200"
                        android:textSize="30sp"
                        android:layout_marginEnd="20sp"
                        android:layout_marginStart="100sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

<!--            Creating Switch button-->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/teamSide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="160dp"
                android:layout_marginTop="10sp"/>

<!--            Creating a horizontal Linear layout for scores-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/teamScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

<!--                Creating Scores for Team A-->
                <TextView
                    android:id="@+id/teamAScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45sp"
                    android:text="0/0"
                    android:textAlignment="center"
                    android:textColor="@color/teal_200"
                    android:textSize="40sp" />

<!--                Creating Scores for Team B-->
                <TextView
                    android:id="@+id/teamBScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170sp"
                    android:layout_marginEnd="20sp"
                    android:text="0/0"
                    android:textColor="@color/teal_200"
                    android:textSize="40sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

<!--            Creating a Horizontal Layout for Runs-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="100sp"
                android:layout_marginEnd="30sp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

<!--                Creating Button 1-->
                <Button
                    android:id="@+id/one"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:autoSizeTextType="uniform"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--                Creating Button 2-->
                <Button
                    android:id="@+id/two"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginEnd="30sp"
                    android:autoSizeTextType="uniform"
                    android:text="2"
                    android:textColor="@color/black"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--                Creating Button 3-->
                <Button
                    android:id="@+id/three"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginEnd="30sp"
                    android:autoSizeTextType="uniform"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--                Creating Button 4-->
                <Button
                    android:id="@+id/four"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginEnd="30sp"
                    android:autoSizeTextType="uniform"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--                Creating Button 6-->
                <Button
                    android:id="@+id/six"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:autoSizeTextType="uniform"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>